    <%= render 'nav' %>

    <section id="home" class="banner-intro banner-slider">
        <div class="banner-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2 text-center">
                        <h1 class="violet"><%= t('home.nav.tagline') %></h1>
                        <div class="scroll-to banner-buttons">
                            <%= link_to "#features", class: "btn btn-lg btn-skin btn-radius" do %>
                                En savoir plus <i class="fa fa-angle-down"></i>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="features" style="padding-top: 30px; padding-bottom: 0px">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 center-title">
                    <h2><%= t('.description') %></h2>
                    <p class="lead">
                        <%= t('.headline') %>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="icon-global violet"></i>
                        <h3>Eclairage LED économe</h3>
                        <p>
                            Une lumière optimisée pour la croissance et agréable à regarder
                        </p>
                        <br/>
                        <i class="icon-global violet"></i>
                        <h3>3 bacs de culture universels</h3>
                        <p>
                            Capables de faire pousser toutes sortes de plantes sur une surface équivalente à un potager de 6m2.
                        </p>
                        <i class="icon-global violet"></i>
                        <h3>Un bel aquarium</h3>
                        <p>
                            200l pour admirer vos poissons, le moteur de la Risebox.
                        </p>
                    </div>
                </div>
                <div class="col-md-4 center-title">
                    <img src="<%= image_url('home/risebox_close2.jpg') %>" alt="Concept Risebox" class="img-responsive center-block">
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="icon-global violet"></i>
                        <h3>Ordinateur embarqué</h3>
                        <p>
                            Risebox surveille et optimise votre écosystème pour vous. Il anticipe les incidents et vous donne la marche à suivre.
                        </p>
                        <br/>
                        <i class="icon-global violet"></i>
                        <h3>Design unique</h3>
                        <p>
                            Un meuble épuré au formes fluides qui s'intègre parfaitement chez vous
                        </p>
                        <i class="icon-global violet"></i>
                        <h3>App pratique</h3>
                        <p>
                            Suivez votre Risebox, bénéficiez de nos conseils et de notre boutique. Vous avez la main verte!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

