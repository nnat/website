<% focus = false if focus.nil? %>
<section class="newsletter-section">
	<div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div id="leadSuccess" class="alert alert-success" role="alert" style="display:none">
        		</div>

        		<div id="leadError" class="alert alert-danger" role="alert" style="display:none">
        		</div>

            	<%= form_for @lead, remote: true, html: {class: 'form-inline _leadForm', role: 'form'} do |f| %>
        	        <div class="input-group">
        	            <%= f.text_field :email, class: 'form-control input-lg', size: '35', placeholder: t('.placeholder'), id: 'lead-email', autofocus: (focus == true) %>
        		        <span class="input-group-btn">
                            <button class="btn btn-lg btn-success btn-radius" name="submit" type="submit"><%= t('.button') %></button>
                        </span>
                    </div>
        	    <% end %>
            </div>
        </div>
    </div>
</section>