<!DOCTYPE html>
<html>

<head>
    <title><%= t('.title') %></title>
    <%= favicon_link_tag image_path(FAVICON_PATH) %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= yield :head %>
    <meta property="og:site_name" content="Risebox" />
    <link rel="alternate" href="<%=url_for(only_path: false, locale: :en) %>" />
    <link rel="alternate" href="<%=url_for(only_path: false, locale: :fr) %>" />
</head>

<body data-spy="scroll">
    <%= yield %>
    <script>
        $('.dropdown-toggle').dropdown();
        <%= yield :load_script %>
    </script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-61146670-1', 'auto');
      ga('send', 'pageview');
    </script>
    <% if SUMOME_TOKEN.present? %>
      <script src="//load.sumome.com/" data-sumo-site-id="<%= SUMOME_TOKEN %>" async="async"></script>
    <% end %>
</body>

</html>